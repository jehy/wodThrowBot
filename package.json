{
  "name": "wodthrowbot",
  "version": "0.0.13",
  "description": "Bot for throwing Wod dice",
  "main": "index.js",
  "bin": {
    "wodthrowbot": "./bin/cli.js"
  },
  "scripts": {
    "start": "DEBUG=throwBot node --use_strict index.js",
    "lint": "./node_modules/.bin/eslint index.js utils.js test bin",
    "test": "npm run lint && mocha -t 10000 --exit",
    "test_verbose": "npm run lint && DEBUG=throwBot:test mocha -t 10000 --exit",
    "check_coverage": "nyc check-coverage --lines 80 --functions 80 --branches 80",
    "coverage": "nyc npm test && npm run check_coverage",
    "coverage-report": "npm run coverage && nyc report --reporter=lcov"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jehy/wodThrowBot.git"
  },
  "author": "Jehy <npm@jehy.ru>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.7.2",
    "config": "^3.3.2",
    "debug": "^4.3.1",
    "node-telegram-bot-api": "^0.50.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "engineStrict": true
}
